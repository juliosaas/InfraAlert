generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model alert {
  id Int @id @default(autoincrement())
}

enum role {
  USER
  ADMIN
}